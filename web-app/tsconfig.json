{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Paths
    "paths": {
      "~app/*": ["./src/app/*"],
      "~/*": ["./src/app/modules/*"],
      "@windycivi/domain/*": ["../domain/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "../domain/filters",
    "../domain/legislation",
    "../domain/representatives",
    "../domain/api.ts",
    "../domain/constants.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
