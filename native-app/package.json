{
  "name": "windy-civi",
  "main": "expo-router/entry",
  "version": "1.0.2",
  "scripts": {
    "start": "npm-run-all --parallel start:expo watch-domain",
    "start:expo": "expo start",
    "build:ios:dev": "npx eas build --platform ios --profile development --local",
    "build:android:dev": "npx eas build --platform android --profile development --local",
    "build:ios:prod": "set -a && . .env.local && set +a && NODE_ENV=production npx eas build --platform ios --profile production --local",
    "build:android:prod": "set -a && . .env.local && set +a && NODE_ENV=production npx eas build --platform android --profile production --local",
    "prebuild:ios": "npx expo prebuild --platform ios",
    "prebuild:android": "npx expo prebuild --platform android",
    "android": "expo run:android",
    "ios": "expo run:ios --device",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "expo lint",
    "tsc": "tsc --noEmit",
    "postinstall": "npm run copy-local-dependencies",
    "copy-local-dependencies": "node scripts/copy-domain.js",
    "watch-domain": "node scripts/copy-domain.js --watch"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/native": "^6.0.2",
    "axios": "^1.7.9",
    "date-fns": "^3.3.1",
    "expo": "~52.0.14",
    "expo-background-fetch": "~13.0.3",
    "expo-build-properties": "~0.13.1",
    "expo-constants": "~17.0.3",
    "expo-dev-client": "~5.0.5",
    "expo-device": "~7.0.1",
    "expo-font": "~13.0.1",
    "expo-linking": "~7.0.3",
    "expo-notifications": "~0.29.10",
    "expo-router": "~4.0.11",
    "expo-splash-screen": "~0.29.13",
    "expo-status-bar": "~2.0.0",
    "expo-system-ui": "~4.0.5",
    "expo-task-manager": "~12.0.3",
    "expo-updates": "~0.26.9",
    "expo-web-browser": "~14.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.3",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.1.0",
    "react-native-web": "~0.19.13",
    "react-native-webview": "13.12.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "@windy-civi/domain": "file:../domain",
    "cross-env": "^7.0.3",
    "cspell": "^8.14.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.3",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
